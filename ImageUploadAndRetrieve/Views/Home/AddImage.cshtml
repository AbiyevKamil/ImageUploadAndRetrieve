@model AddImageModel
@{
    ViewData["Title"] = "AddImage";
}




<h1>AddImage</h1>

<form method="post" asp-action="AddImage" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter title">
    </div>
    <div class="form-group">
        <label asp-for="File">Choose image</label>
        <input type="file" accept="image/*" class="form-control-file" asp-for="File">
    </div>
    <button type="submit" class="btn btn-sm btn-outline-dark">Add</button>
</form>    

